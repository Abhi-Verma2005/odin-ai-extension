{
  "manifest_version": 3,
  "name": "LeetCode AI Tutor Sync",
  "version": "1.0.0",
  "description": "Automatically sync your LeetCode solutions to your AI tutor for personalized learning",
  "permissions": [
    "storage",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://algo-chat-gamma.vercel.app//*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Sync Status"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "auth.html"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}